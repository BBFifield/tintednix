#overview {
  position: fixed !important;

  min-width: 100% !important;
  max-width: 100% !important;
  min-height: 100% !important;
  max-height: 100% !important;

  background-color: var(--base00) !important;
}
#overview .overview-title {
  color: var(--base0D) !important;
}

.overview-close-button {
  color: var(--base08) !important;
  background-color: color-mix(in oklab, var(--base08) 60%, black) !important;
  box-shadow: var(--shadow-thin-base08-dull) !important;
}
.overview-close-button:hover {
  background-color: var(--base08) !important;
  box-shadow: var(--shadow-thin-base08) !important;
}
.overview-close-button:active {
  background-color: color-mix(in oklab, var(--base08) 60%, black) !important;
  box-shadow: var(--shadow-inset-base08-dull) !important;
}
